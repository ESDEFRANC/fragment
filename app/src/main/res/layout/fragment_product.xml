<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
              xmlns:app="http://schemas.android.com/apk/res-auto"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context=".ProductFragment"
android:orientation="vertical">

    <ImageView
            android:layout_width="@dimen/ImageProductMarginW"
            android:layout_height="@dimen/ImageProductMarginH"
            app:srcCompat="@mipmap/ic_launcher"
            android:id="@+id/ImageProduct"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/Margin"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/Margin"
            android:layout_marginTop="@dimen/CantityMarginS"
            app:layout_constraintTop_toTopOf="parent"/>
    <TextView
            android:text="TextView"
            android:layout_width="@dimen/DescriptionClickedMarginW"
            android:layout_height="@dimen/DescriptionClickedMarginH"
            android:id="@+id/Description"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/Margin"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/Margin"
            android:layout_marginTop="@dimen/Margin"
            app:layout_constraintTop_toBottomOf="@+id/ProductName"
            android:layout_marginBottom="@dimen/DescriptionClickedMarginB"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintHorizontal_bias="0.504"/>
    <TextView
            android:text="TextView"
            android:layout_width="@dimen/ProductNameClickedMarginW"
            android:layout_height="@dimen/ProductNameClickedMarginH"
            android:id="@+id/ProductName"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="@dimen/CantityMarginT"
            android:layout_marginTop="@dimen/ProductNameClickedMarginT"
            app:layout_constraintTop_toBottomOf="@+id/ImageProduct"/>
    <TextView
            android:text="TextView"
            android:layout_width="@dimen/ProdctCantityClickedMarginW"
            android:layout_height="@dimen/ProdctCantityClickedMarginH"
            android:id="@+id/ProductCantity"
            app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="@dimen/ProdctCantityClickedMarginET"
            android:layout_marginTop="@dimen/ProdctCantityClickedMarginET"
            app:layout_constraintTop_toBottomOf="@+id/ImageProduct"
            app:layout_constraintStart_toEndOf="@+id/ProductName"
            android:layout_marginStart="@dimen/Margin"
            app:layout_constraintHorizontal_bias="0.829"/>
</android.support.constraint.ConstraintLayout>